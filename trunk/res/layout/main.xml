<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/txtComment" android:text="@string/strEnterComment"></EditText>
    <Button android:layout_height="wrap_content" android:text="@string/UpdateButtonCaption" android:layout_width="fill_parent" android:id="@+id/cmdUpdateLocation"></Button>
    <LinearLayout android:id="@+id/areaCollection" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/txtAveraging" android:text="@string/strAveraging" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>    
    </LinearLayout>
    <ProgressBar android:id="@+id/pbrCollect" android:layout_height="wrap_content" android:layout_width="fill_parent" android:indeterminate="false" style="@android:style/Widget.ProgressBar.Horizontal"></ProgressBar>
    <TextView android:layout_height="wrap_content" android:id="@+id/txtGPSStatus" android:layout_width="wrap_content" android:text="TextView"></TextView>
   
</LinearLayout>
